<?xml version="1.0"?>
<config>
    <modules>
        <Aligent_Feeds>
            <version>0.1.1</version>
        </Aligent_Feeds>
    </modules>
    <global>
        <models>
            <aligent_feeds>
                <class>Aligent_Feeds_Model</class>
            </aligent_feeds>
        </models>
        <resources>
            <aligent_feeds_setup>
                <setup>
                    <module>Aligent_Feeds</module>
                </setup>
            </aligent_feeds_setup>
        </resources>
        <helpers>
            <aligent_feeds>
                <class>Aligent_Feeds_Helper</class>
            </aligent_feeds>
        </helpers>
    </global>
    <crontab>
        <jobs>
            <export_feeds>
                <schedule>
                    <cron_expr>30 5 * * *</cron_expr>
                </schedule>
                <run>
                    <model>aligent_feeds/cron::exportFeeds</model>
                </run>
            </export_feeds>
        </jobs>
    </crontab>
    <default>
        <google>
            <shopping>
                <enable>0</enable>
                <condition>1</condition>
            </shopping>
        </google>
    </default>
    <stores>
        <default>
            <google>
                <shopping>
                    <enable>1</enable>
                </shopping>
            </google>
        </default>
    </stores>
    <feeds>
        <googleshopping>
            <fields>
                <identifier>
                    <attribute>sku</attribute>
                    <value>-</value>
                    <attribute>product_id</attribute>
                </identifier>
            </fields>
            <output>
                <text>
                    <format>csv</format>
                    <delimiter>\t</delimiter>
                    <enclosure>"</enclosure>
                </text>
                <xml>
                    <format>xml</format>
                </xml>
            </output>
        </googleshopping>
    </feeds>
</config>